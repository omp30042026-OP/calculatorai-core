    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  }
}

