{
  "name": "calculatorai-core",
  "version": "1.1.0",
  "description": "Core decision, risk, and explainability engine",
  "main": "index.js",
  "type": "commonjs",
  "bin": {
    "veritascale": "bin/veritascale"
  },
  "files": [
    "bin",
    "packages"
  ],



  "scripts": {
    "explain:single": "tsx examples/run-explain-tree.ts > /dev/null",
    "explain:multi": "tsx examples/run-explain-multi.ts > /dev/null",
    "effects": "tsx examples/assert-effects.ts",
    "golden": "tsx examples/verify-golden.ts",
    "decision:ok": "tsx examples/run-decision-engine.ts > /dev/null",
    "decision:blocked": "tsx examples/run-decision-engine-blocked.ts > /dev/null",
    "decision:required": "tsx examples/run-decision-engine-required-fields.ts > /dev/null",
    "decision:artifacts": "tsx examples/run-decision-engine-artifacts.ts > /dev/null",
    "decision:fork": "tsx examples/run-decision-engine-fork.ts > /dev/null",
    "decision:store": "tsx examples/run-decision-store-replay.ts > /dev/null",
    "decision:store:sqlite": "tsx examples/run-decision-store-sqlite.ts > /dev/null",
    "decision:snapshots:sqlite": "tsx examples/run-decision-snapshots-sqlite.ts > /dev/null",
    "decision:durability:sqlite": "tsx examples/run-decision-durability-sqlite.ts > /dev/null",
    "decision:retention:sqlite": "tsx examples/run-decision-retention-sqlite.ts > /dev/null",
    "decision:history:sqlite": "tsx examples/run-decision-history-sqlite.ts > /dev/null",
    "decision:fork-history:sqlite": "tsx examples/run-decision-fork-history-sqlite.ts > /dev/null",
    "decision:diff:sqlite": "tsx examples/run-decision-diff-sqlite.ts > /dev/null",
    "decision:audit:sqlite": "tsx examples/run-decision-audit-sqlite.ts > /dev/null",
    "decision:timeline:sqlite": "tsx examples/run-decision-timeline-sqlite.ts > /dev/null",
    "decision:fork-graph:sqlite": "tsx examples/run-decision-fork-graph-sqlite.ts > /dev/null",
    "decision:lineage:sqlite": "tsx examples/run-decision-lineage-sqlite.ts > /dev/null",
    "decision:observability:sqlite": "tsx examples/run-decision-observability-sqlite.ts > /dev/null",
    "decision:verify-from-snapshot:sqlite": "tsx examples/run-decision-verify-from-snapshot-sqlite.ts > /dev/null",
    "decision:verify-lineage:sqlite": "tsx examples/run-decision-verify-lineage-sqlite.ts > /dev/null",
    "decision:anchored-snapshot:sqlite": "tsx examples/run-decision-verify-anchored-snapshot-sqlite.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "decision:provenance:tamper": "tsx examples/run-decision-provenance-tamper.ts > /dev/null",
    "decision:summary": "tsx examples/run-decision-summary.ts",
    "check": "npm run typecheck && npm run explain:single && npm run explain:multi && npm run effects && npm run golden && npm run decision:ok && npm run decision:blocked && npm run decision:required && npm run decision:artifacts && npm run decision:fork && npm run decision:store && npm run decision:store:sqlite && npm run decision:snapshots:sqlite && npm run decision:durability:sqlite && npm run decision:retention:sqlite && npm run decision:history:sqlite && npm run decision:fork-history:sqlite && npm run decision:diff:sqlite && npm run decision:audit:sqlite && npm run decision:timeline:sqlite && npm run decision:fork-graph:sqlite && npm run decision:lineage:sqlite && npm run decision:observability:sqlite",
    "replay:demo": "tsx examples/run-replay-counterfactual.ts",
    "replay:store": "tsx examples/run-replay-from-store.ts",
    "federation:demo": "tsx examples/run-federation-demo.ts",
    "federation:verify": "tsx examples/run-federation-verify-bundle.ts",
    "decision:anchors:sqlite": "tsx examples/run-decision-anchors-sqlite.ts > /dev/null",
    "decision:anchors:sqlite:debug": "tsx examples/run-decision-anchors-sqlite.ts",
    "decision:anchor-tamper:sqlite": "tsx examples/run-decision-anchor-tamper-sqlite.ts",
    "decision:fork-receipt:sqlite": "tsx examples/run-decision-fork-receipt-sqlite.ts",
    "decision:fork-receipt-tamper:sqlite": "tsx examples/run-decision-fork-receipt-tamper-sqlite.ts",
    "decision:dia:sqlite": "tsx examples/run-decision-dia-sqlite.ts",
    "decision:dia:smoke": "DEBUG_LIABILITY=1 npm run decision:dia:sqlite",
    "vs:keygen": "node -e \"const fs=require('fs');const crypto=require('crypto');const {publicKey,privateKey}=crypto.generateKeyPairSync('ed25519');fs.mkdirSync('.veritascale',{recursive:true});fs.writeFileSync('.veritascale/priv.pem',privateKey.export({format:'pem',type:'pkcs8'}));fs.writeFileSync('.veritascale/pub.pem',publicKey.export({format:'pem',type:'spki'}));console.log('wrote .veritascale/{priv,pub}.pem');\"",
    "vs:seal": "veritascale seal",
    "vs:verify": "veritascale verify",
    "vs:demo": "node -e \"const fs=require('fs'); fs.writeFileSync('demo.json', JSON.stringify({decision_id:'demo-1',meta:{},signatures:[]},null,2)+'\\n');\" && veritascale seal demo.json --key .veritascale/priv.pem --embed-pub && veritascale verify demo.json --strict --verify-sigs && node -e \"console.log('OK demo.json');\"",
    "vs:demo:embed": "node -e \"const fs=require('fs'); const ex=fs.readFileSync('examples/decision.min.json','utf8'); fs.writeFileSync('demo.json', ex);\" && veritascale seal demo.json --key .veritascale/priv.pem --embed-pub && veritascale verify demo.json --strict --verify-sigs && node -e \"console.log('OK demo.json (embedded pubkey)');\" && rm -f demo.json",
    "vs:demo:prod": "node -e \"const fs=require('fs'); const ex=fs.readFileSync('examples/decision.min.json','utf8'); fs.writeFileSync('demo.json', ex);\" && veritascale seal demo.json --key .veritascale/priv.pem && veritascale verify demo.json --strict --verify-sigs --pubkey .veritascale/pub.pem && node -e \"console.log('OK demo.json (pubkey override)');\" && rm -f demo.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "tsx": "^4.21.0"
  }
}