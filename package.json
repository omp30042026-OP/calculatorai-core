{
  "name": "calculatorai-core",
  "version": "1.0.0",
  "description": "Core decision, risk, and explainability engine",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"No tests specified\"",

    "typecheck": "tsc --noEmit",

    "explain:single": "tsx examples/run-explain-tree.ts > /dev/null",
    "explain:multi": "tsx examples/run-explain-multi.ts > /dev/null",

    "effects": "tsx examples/assert-effects.ts",
    "golden": "tsx examples/verify-golden.ts",

    "decision:ok": "tsx examples/run-decision-engine.ts > /dev/null",
    "decision:blocked": "tsx examples/run-decision-engine-blocked.ts > /dev/null",
    "decision:required": "tsx examples/run-decision-engine-required-fields.ts > /dev/null",
    "decision:artifacts": "tsx examples/run-decision-engine-artifacts.ts > /dev/null",
    "decision:fork": "tsx examples/run-decision-engine-fork.ts > /dev/null",

    "decision:store": "tsx examples/run-decision-store-replay.ts > /dev/null",
    "decision:store:sqlite": "tsx examples/run-decision-store-sqlite.ts > /dev/null",

    "check": "npm run typecheck && npm run explain:single && npm run explain:multi && npm run effects && npm run golden && npm run decision:ok && npm run decision:blocked && npm run decision:required && npm run decision:artifacts && npm run decision:fork && npm run decision:store && npm run decision:store:sqlite"
  },
  "keywords": [],
